// Tagueamento

const links = fragmentElement.querySelectorAll("a");

const handleEventLinkClick = (link) => {
  Analytics.track("Link", {
    section: "Footer",
    rotulo: `${link.innerText} : ${link.href}`,
  });
};

const handleEventSocialMediaClick = (img) => {
  Analytics.track("Link", {
    section: "Footer",
    rotulo: `${img.alt}`,
  });
};

links.forEach((link) => {
  const img = fragmentElement.querySelector("img");
  img
    ? img.addEventListener("click", () => handleEventSocialMediaClick(img))
    : link.addEventListener("click", () => handleEventLinkClick(link));
});;}());</script>
