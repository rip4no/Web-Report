        <script>(function() {const configuration = {"buttonType":"primary","buttonColor":"amarelo-vale","buttonSize":"nm"}; const fragmentElement = document.querySelector('#fragment-5a1aeab7-e81e-e49b-3527-219971555386'); const fragmentEntryLinkNamespace = 'ibqt'; const fragmentNamespace = 'ibqt'; const layoutMode = 'view';/* Tagueamento */

/* Pega seção */

let section = "";
const possibleSections = document.querySelectorAll(
  `h2, h3, .h2, .h3, #fragment-${fragmentNamespace}`
);

if (possibleSections.length === 1) {
  /* Se não houver nenhum h2 pega o h1 da página */
  section = document.querySelector("h1").innerText;
} else {
  /* Pega o h2 mais próximo do fragmento */
  possibleSections.forEach((possibleSection) => {
    if (possibleSection.localName !== "a" && possibleSection.innerText) {
      section = possibleSection;
    } else {
      return section;
    }
  });
}

const btn = fragmentElement.querySelector(
  `#fragment-${fragmentNamespace}-link`
);
const handleEventBtnClick = (text, href) => {
  Analytics.track("Botão", {
    section: `${section.innerText}`,
    rotulo: `${text} : ${href}`,
  });
};
btn.addEventListener("click", () =>
  handleEventBtnClick(btn.innerText, btn.href)
);;}());</script>
