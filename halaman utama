  <script type="text/plain" cookie-consent="functionality">
  $(function () {
    main();
    Liferay.on("endNavigate", main);

    function main() {
      if (window.recentSearches) {
        showRecentSearches();
      }
    }

    function showRecentSearches() {
      const searchForm = document.querySelector(
        '.vale-fragmento-busca-do-header form[id^="_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_"]'
      );
      const searchInput = searchForm.querySelector(
        "input[data-" + window.recentSearches.DATA_ATTRIBUTE + '="true"]'
      );

      const searchURL = searchForm.action;
      const searchParam = searchInput.name;

      const recentSearchesEl = document.querySelector(
        ".vale-fragmento-busca-do-header .recent-searches"
      );
      recentSearchesEl.innerHTML = "";

      window.recentSearches.get().forEach((search) => {
        const link = document.createElement("a");
        link.href = searchURL + "?" + searchParam + "=" + search;
        link.innerText = search;

        const recentSearchEl = document.createElement("li");
        recentSearchEl.classList.add("mb-4");
        recentSearchEl.appendChild(link);

        recentSearchesEl.appendChild(recentSearchEl);
      });
    }
  });
</script>
