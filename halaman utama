 <script>(function() {const configuration = {}; const fragmentElement = document.querySelector('#fragment-57dd04b8-76e4-0b39-e349-1a0ca77a2398'); const fragmentEntryLinkNamespace = 'hvqu'; const fragmentNamespace = 'hvqu'; const layoutMode = 'view';$("#sitemap-mobile-menu-arrow").on("click", function () {
  $(".initial-mobile-menu").toggleClass("is-closed");
  $(".sitemap-mobile-menu").toggleClass("is-open");
});

