var sectionId = fragmentNamespace;
//Função para verificar se scroll chegou no ponto
function isScrolledIntoView(elem) {
  var docViewTop = $(window).scrollTop();
  var docViewBottom = docViewTop + $(window).height();
  var elemTop = $(elem).offset().top;
  var elemBottom = elemTop + $(elem).outerHeight();
  if (elemBottom > docViewTop && elemTop < docViewBottom) {
    $(elem + " .animacao-item").addClass("visivel");
  }
}
$(document).ready(function () {
  if (layoutMode !== "edit") {
    isScrolledIntoView("#" + sectionId);
    //Animação no scroll da tela
    $(window).on("resize scroll", function () {
      isScrolledIntoView("#" + sectionId);
    });
  }
});

// Tagueamento

const handleEventBtnClick = (text, href) => {
  Analytics.track("Botão", {
    section: "Box conecta",
    rotulo: `${text} : ${href}`,
  });
};

const btn = fragmentElement.querySelector("#link-box-conecta");

btn.addEventListener("click", () =>
  handleEventBtnClick(btn.innerText, btn.href)
);;}());</script>
