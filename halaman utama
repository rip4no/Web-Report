 <script>(function() {const configuration = {}; const fragmentElement = document.querySelector('#fragment-6d327c76-8ec5-fa4c-bfd0-5e10fd44dad7'); const fragmentEntryLinkNamespace = 'dlgl'; const fragmentNamespace = 'dlgl'; const layoutMode = 'view';Liferay.on("openHeaderSearch", openHeaderSearch);
Liferay.on("toggleHeaderSearch", toggleHeaderSearch);

fragmentElement
  .querySelectorAll(".close-search > *")
  .forEach((el) => (el.onclick = closeHeaderSearch));

function openHeaderSearch() {
  fragmentElement
    .querySelector(".vale-fragmento-busca-do-header")
    .classList.add("is-open");
  document.querySelector("body").classList.add("busca-do-header-is-open");
  document.querySelector("body").classList.add("overflow-hidden");

  // Essa transição é para prevenir o "Chromium's Blink bug" de acontecer
  // quando a página é carregada pela primeira vez. Essas transições são
  // utilizadas apenas quando o menu está fechando.
  fragmentElement
    .querySelector(".vale-fragmento-busca-do-header")
    .classList.add("opacity-and-visibility-transition");
}

function closeHeaderSearch() {
  fragmentElement
    .querySelector(".vale-fragmento-busca-do-header")
    .classList.remove("is-open");
  document.querySelector("body").classList.remove("busca-do-header-is-open");
  document.querySelector("body").classList.remove("overflow-hidden");
}

function toggleHeaderSearch() {
  fragmentElement
    .querySelector(".vale-fragmento-busca-do-header")
    .classList.contains("is-open")
    ? closeHeaderSearch()
    : openHeaderSearch();
}

// Tagueamento

const links = fragmentElement.querySelectorAll("a");

const handleEventLinkClick = (link) => {
  Analytics.track("Link", {
    section: "Busca do header",
    rotulo: `${link.innerText} : ${link.href}`,
  });
};

links.forEach((link) =>
  link.addEventListener("click", () => handleEventLinkClick(link))
);;}());</script>
