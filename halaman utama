 <script>(function() {const configuration = {}; const fragmentElement = document.querySelector('#fragment-8176f756-6839-26ec-ddc8-7f22b4064c06'); const fragmentEntryLinkNamespace = 'novr'; const fragmentNamespace = 'novr'; const layoutMode = 'view';// Side menu
Liferay.on("openSideMenu", openSideMenu);

fragmentElement
  .querySelectorAll(".content-close-button")
  .forEach((el) => addOnClickOrEnter(el, closeSideMenu));

function openSideMenu() {
  fragmentElement
    .querySelector(".vale-fragmento-menu-lateral")
    .classList.add("is-open");
  document.querySelector("#wrapper").classList.add("menu-lateral-is-open");
  document.querySelector("body").classList.add("overflow-hidden");

  // Essa transição é para prevenir o "Chromium's Blink bug" de acontecer
  // quando a página é carregada pela primeira vez. Essas transições são
  // utilizadas apenas quando o menu está fechando.
  fragmentElement
    .querySelector(".vale-fragmento-menu-lateral")
    .classList.add("opacity-and-visibility-transition");
}

function closeSideMenu() {
  fragmentElement
    .querySelector(".vale-fragmento-menu-lateral")
    .classList.remove("is-open");
  document.querySelector("#wrapper").classList.remove("menu-lateral-is-open");
  document.querySelector("body").classList.remove("overflow-hidden");
}

// Submenu
fragmentElement
  .querySelectorAll(".link")
  .forEach((el) => (el.onclick = () => openFirstSubmenu(el)));

fragmentElement
  .querySelectorAll(".submenu-top-go-back")
  .forEach((el) =>
    addOnClickOrEnter(
      el,
      () => closeSubmenu(el.closest(".submenu")),
      el.closest(".links-item")
    )
  );

fragmentElement
  .querySelectorAll(".open-nested-submenu")
  .forEach((el) =>
    addOnClickOrEnter(el, () => openSubmenu(el), el.closest(".links-item"))
  );

fragmentElement
  .querySelectorAll(".submenu-close")
  .forEach((el) => (el.onclick = closeSideMenu));

function openFirstSubmenu(contentLink) {
  contentLink
    .closest(".links-item")
    .querySelector(".submenu")
    .classList.add("is-open");
}

function closeSubmenu(submenu) {
  submenu.classList.remove("is-open");

  let parentSubmenu = submenu.closest(".submenu.go-left");
  if (parentSubmenu) {
    parentSubmenu.classList.remove("go-left");
  }
}

function openSubmenu(submenuLink) {
  submenuLink
    .closest(".nav-item-submenu")
    .querySelector(".submenu")
    .classList.add("is-open");
  submenuLink.closest(".submenu").classList.add("go-left");
}

function addOnClickOrEnter(element, callback, focusElement) {
  element.addEventListener("click", callback);
  element.addEventListener("keyup", function (event) {
    if (event.keyCode === 13) {
      if (focusElement) focusElement.focus();
      event.currentTarget.click();
    }
  });
}

// Fechar menu com tab
const allLinks = fragmentElement.querySelectorAll('a');
const lastLink = allLinks[allLinks.length - 1];
lastLink.addEventListener('keydown', (e) => closeMenuIfTabOut(e));

function closeMenuIfTabOut(event) {
  const pressedTab = event.keyCode == 9;

  if (pressedTab) {
    document.querySelector('.left-menu > .burguer').focus();
    closeSideMenu();
  }
}

const firstIndextab = fragmentElement.querySelector('[tabindex]');
firstIndextab.addEventListener('keydown', (e) => goToLogoIfTabOut(e));

function goToLogoIfTabOut(event) {
  const pressedTab = event.keyCode == 9;
  const pressedShift = event.shiftKey;

  if (pressedTab && pressedShift) {
    document.querySelector('.logo > a').focus();
  }
}

// Tagueamento

const links = fragmentElement.querySelectorAll("a");

const handleEventLinkClick = (text, href) => {
  Analytics.track("Link", {
    section: "Menu de navegação",
    rotulo: `${text} : ${href}`,
  });
};

links.forEach((link) => {
  link.addEventListener("click", () =>
    handleEventLinkClick(link.innerText, link.href)
  );
});

const handleEventBtnClick = (text) => {
  Analytics.track("Botão", {
    section: "Menu de navegação",
    rotulo: text,
  });
};

const closeBtns = fragmentElement.querySelectorAll(".content-close-button");
closeBtns.forEach((closeBtn) =>
  closeBtn.addEventListener("click", () => handleEventBtnClick("Fechar menu"))
);;}());</script>
</div>
