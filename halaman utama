           <script type="text/plain" cookie-consent="functionality">
    if (window.recentSearches) {
        window.recentSearches.init(document.querySelector('#_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl__header_search_bar'));
    }
</script>
           <script>

    // Dropdown de sugestões baseado no
    // liferay-portal-7.4.3.41-ga41\modules\apps\portal-search\portal-search-web\src\main\resources\META-INF\resources\js\components\SearchBar.js

    (function() {
        const searchBar = document.querySelector('#_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl__header_search_bar');

        const keywordsInput = searchBar.querySelector('.search-bar-keywords-input');
        const form = keywordsInput.form;

        const suggestions = searchBar.querySelector('.suggestions');
        const suggestionsList = searchBar.querySelector('.suggestions-list');

        // Remover aspas duplas das keywords antes de submeter
        form.onsubmit = () => keywordsInput.value = keywordsInput.value.replaceAll('"', '');

        // Variáveis da configuração do portlet
        const emptySearchEnabled = false;
        const keywords = '';
        const keywordsParameterName = 'q' || 'q';
        const paginationStartParameterName = '';
        const suggestionsDisplayThreshold = '2' || '2';
        const suggestionsURL = '/o/portal-search-rest/v1.0/suggestions' || '/o/portal-search-rest/v1.0/suggestions';
        const suggestionsContributorConfiguration = '[{"contributorName":"sxpBlueprint","displayGroupName":"suggestions","size":5,"attributes":{"fields":[],"includeAssetSearchSummary":true,"includeAssetURL":true,"sxpBlueprintId":459158}}]' || '{}';
       
        let searchURL = '/in/indonesia';

        // setar URL hard coded enquanto a URL de destino do portlet de Search Bar não funciona
        if (themeDisplay.getLayoutRelativeURL().includes(searchURL)) {
            searchURL = '/central-de-busca';
        } 

        keywordsInput.onfocus = updateSuggestionsDropdownState;
        keywordsInput.oninput = _debounce(updateSuggestionsDropdownState);
        
        // Usa timeout para atrasar evento e possibilar checar o elemento ativo atual
        keywordsInput.onblur = () => setTimeout(closeSuggestionsDropdown);
        suggestions.onblur = () => setTimeout(closeSuggestionsDropdown);

        form.action = searchURL;
        form.autocomplete = 'off';

        async function updateSuggestionsDropdownState() {
            const value = keywordsInput.value;

            if (value.trim().length > parseInt(suggestionsDisplayThreshold, 10)) {
                const items = await fetchSuggestions(value);
                
                if (!items.length) {
                    clearSuggestionsDropdown();
                    closeSuggestionsDropdown();
                    return;
                }

                updateSuggestions(items, value);
                openSuggestionsDropdown();
            } else {
                clearSuggestionsDropdown();
                closeSuggestionsDropdown();
            }
        }

        function fetchSuggestions(value) {
            const fetchURL = new URL(
                Liferay.ThemeDisplay.getPathContext() + suggestionsURL,
                Liferay.ThemeDisplay.getPortalURL()
            );

            fetchURL.searchParams.set('currentURL', window.location.href);
            fetchURL.searchParams.set('destinationFriendlyURL', (!searchURL.trim().length ? searchURL : '/search'));
            fetchURL.searchParams.set('groupId', Liferay.ThemeDisplay.getScopeGroupId());
            fetchURL.searchParams.set('plid', Liferay.ThemeDisplay.getPlid())
            fetchURL.searchParams.set('search', value);

            // Exemplo de URL "/o/portal-search-rest/v1.0/suggestions?currentURL=http%3A%2F%2Flocalhost%3A8080%2Fbusca&destinationFriendlyURL=%2Fsearch&groupId=20121&plid=61&scope=this-site&search=repa"
            return fetch(fetchURL.href, {
                credentials: 'include',
                headers: {
                    'Accept': 'application/json',
                    'Accept-Language': Liferay.ThemeDisplay.getBCP47LanguageId(),
                    'Content-Type': 'application/json',
                    'x-csrf-token': Liferay.authToken,
                },
                body: suggestionsContributorConfiguration,
                method: 'POST'
            })
            .then(resp => resp.json())
            .then(resp => {
                if (resp && resp.items && resp.items.length) {
                    return resp.items
                } else {
                    return [];
                }

            })
            .catch(e => {
                console.error(e);
                return [];
            });
        }

        function updateSuggestions(items, keywords) {
            clearSuggestionsDropdown();

            // pega todas as sugestões de todos os itens e ordena pelo score
            const suggestionsHTML = items.flatMap(item => item.suggestions).sort((a, b) => { 
                return b.score - a.score;
            })
            .map(suggestion => createSuggestionElement(suggestion, keywords))
            .forEach(element => {
                suggestionsList.appendChild(element);
            });
        }

        function openSuggestionsDropdown() {
            searchBar.closest('.search').classList.add('is-searching');
        }

        function closeSuggestionsDropdown() {
            if (document.activeElement === suggestions || document.activeElement === keywordsInput) return;
            searchBar.closest('.search').classList.remove('is-searching');
        }

        function clearSuggestionsDropdown() {
            suggestionsList.innerHTML = '';
        }

        function createSuggestionElement(suggestion, keywords) {
            const suggestionText = suggestion.text;
            
            const modelSuggestionItem = searchBar.querySelector('.model-suggestion-item');
            const newSuggestion = modelSuggestionItem.cloneNode(true);

            newSuggestion.querySelector('a').innerHTML = highlightText(suggestionText, keywords);

            newSuggestion.classList.remove('d-none');
            newSuggestion.classList.remove('model-suggestion-item');
            
            newSuggestion.onclick = handleSuggestionClick;
            return newSuggestion;
        }

        function handleSuggestionClick(event) {
            const suggestionElement = event.currentTarget;
            text = suggestionElement.textContent;

            keywordsInput.value = text;
            
            // form.submit() não chama os handlers adicionados com addEventListener
            form.querySelector('button[type="submit"]').click();
        }

        function highlightText(text, keywords) {
            const preTag = '<b>';
            const postTag = '</b>';

            const regex = new RegExp(keywords,"i");
            return text.replace(regex, str => preTag + str + postTag);
        }

        // utilitários
        function _debounce(func, timeout = 300){
            let timer;
            return (...args) => {
                clearTimeout(timer);
                timer = setTimeout(() => { func.apply(this, args); }, timeout);
            };
        }
    })();

</script>
          </form>
          <script>
AUI().use(
  'liferay-form',
function(A) {
(function() {
var $ = AUI.$;var _ = AUI._;
	Liferay.Form.register(
		{
			id: '_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl_fm'

			
				, fieldRules: [

					

				]
			

			

			, validateOnBlur: true
		}
	);

	var onDestroyPortlet = function(event) {
		if (event.portletId === 'com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl') {
			delete Liferay.Form._INSTANCES['_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl_fm'];
		}
	};

	Liferay.on('destroyPortlet', onDestroyPortlet);

	

	Liferay.fire(
		'_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl_formReady',
		{
			formName: '_com_liferay_portal_search_web_search_bar_portlet_SearchBarPortlet_INSTANCE_dlgl_fm'
		}
	);
})();
});

</script>
