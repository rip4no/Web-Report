  <script>(function() {const configuration = {"navBgColor":"azul-vale","qtdBanners":2,"secondsBetweenSlides":15}; const fragmentElement = document.querySelector('#fragment-17929f22-00b5-0509-4f40-ca279ee956ae'); const fragmentEntryLinkNamespace = 'zewn'; const fragmentNamespace = 'zewn'; const layoutMode = 'view';document.addEventListener("DOMContentLoaded", function () {
  const setaNav = fragmentElement.querySelector(".seta-navegacao");
  const $carrossel = $(fragmentElement.querySelector(".carousel"));
  const indicators = fragmentElement.querySelector(".carousel-indicators");
  const carouselInner = fragmentElement.querySelector(".carousel-inner");

  // Obtém o valor de secondsBetweenSlides e converte para milissegundos
  let interval = parseInt(configuration.secondsBetweenSlides, 10);
  if (isNaN(interval) || interval < 5) {
    interval = 10;
  }
  interval *= 1000;

  $carrossel.carousel({
    interval: interval,
    wrap: true, // Habilita o loop contínuo
  });

  setaNav.addEventListener("click", function () {
    window.scroll({
      top: fragmentElement.scrollHeight,
      behavior: "smooth",
    });
  });

  // Programático de acessibilidade para marcação de aria-checked
  $carrossel.on("slid.bs.carousel", function (ev) {
    const oldBulletActive = indicators.querySelector("[aria-checked='true']");
    const oldItemActive = carouselInner.querySelector(
      `.carousel-item:nth-of-type(${ev.from + 1})`
    );
    const newBulletActive = indicators.querySelector(".active");
    const newItemActive = ev.relatedTarget;

    oldBulletActive.setAttribute("aria-checked", false);
    newBulletActive.setAttribute("aria-checked", true);
    oldItemActive.setAttribute("aria-hidden", true);
    newItemActive.setAttribute("aria-hidden", false);
  });

  // Programático de acessibilidade para uso de navegação de teclado
  indicators.querySelectorAll("li").forEach(function (item) {
    item.addEventListener("keydown", function (event) {
      if (event.code === "Enter") return this.click();
    });
  });

  // Tagueamento
  const handleEventBtnClick = (text) => {
    Analytics.track("Botão", {
      section: "Banner Home",
      rotulo: text,
    });
  };

  const arrowBtn = fragmentElement.querySelector(".seta-navegacao");
  arrowBtn.addEventListener("click", () =>
    handleEventBtnClick("Desça para saber mais")
  );

  const carrosselBtns = fragmentElement.querySelectorAll(
    ".carousel-indicators li"
  );

  const handleCarrosselEventClick = (index) => {
    Analytics.track("Botão", {
      section: "Banner Home",
      rotulo: `Move para o item do carrossel : ${index}`,
    });
  };

  carrosselBtns.forEach((btn, index) => {
    btn.addEventListener("click", () => handleCarrosselEventClick(index));
  });

  const carrosselLinks = fragmentElement.querySelectorAll("a");

  const handleEventLinkClick = (text, href) => {
    Analytics.track("Link", {
      section: "Banner Home",
      rotulo: `${text} : ${href}`,
    });
  };

  carrosselLinks.forEach((link) => {
    const img = link.querySelector("img");
    if (img) {
      img.addEventListener("click", () =>
        handleEventLinkClick(
          img.getAttribute("data-lfr-editable-id"),
          link.href
        )
      );
    }
  });

  // Aplica negrito dinamicamente às palavras "TEM" e "Vale"
  const elements = fragmentElement.querySelectorAll(
    '[data-lfr-editable-id^="slide-destaque"]'
  );

  elements.forEach(function (element) {
    if (element.innerHTML.includes("Tem")) {
      element.innerHTML = element.innerHTML.replace(
        "Tem",
        '<span class="bold-text titleHome">Tem</span>'
      );
    }

    if (element.innerHTML.includes("Vale")) {
      element.innerHTML = element.innerHTML.replace(
        "Vale",
        '<span class="bold-text titleHome">Vale</span>'
      );
    }
  });
});;}());</script>
