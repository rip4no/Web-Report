          <script>
(function(){
    const ptBtn = $("#_com_liferay_site_navigation_language_web_portlet_SiteNavigationLanguagePortlet_hito-PT-btn");
    const enBtn = $("#_com_liferay_site_navigation_language_web_portlet_SiteNavigationLanguagePortlet_hito-EN-btn");
    const bhBtn = $("#_com_liferay_site_navigation_language_web_portlet_SiteNavigationLanguagePortlet_hito-BH-btn");

    ptBtn.click(() => {
        ptBtn.toggleClass("current-lang");
        enBtn.toggleClass("current-lang");

        if (!ptBtn.hasClass("current-lang")) {
            Analytics.track("Botão", {
                section: "Seletor de línguas",
                rotulo: "Mudar para " + ptBtn.innerText,
            });
        }
    })

    enBtn.click(() => {
        enBtn.toggleClass("current-lang");
        ptBtn.toggleClass("current-lang");
        bhBtn.toggleClass("current-lang");

        if (!enBtn.hasClass("current-lang")) {
            Analytics.track("Botão", {
                section: "Seletor de línguas",
                rotulo: "Mudar para " + enBtn.innerText,
            });
        }
    })

    bhBtn.click(() => {
        bhBtn.toggleClass("current-lang");
        enBtn.toggleClass("current-lang");

        if (!bhBtn.hasClass("current-lang")) {
            Analytics.track("Botão", {
                section: "Seletor de línguas",
                rotulo: "Mudar para " + bhBtn.innerText,
            });
        }
    })
})()
</script>
         </div>
        </div>
       </div>
      </section>
