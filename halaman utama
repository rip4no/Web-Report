              <script>(function() {const configuration = {"buttonType":"primary","buttonColor":"azul-vale","buttonSize":"lg"}; const fragmentElement = document.querySelector('#fragment-175d7f1f-42e7-29a5-b605-a8616dafdbea'); const fragmentEntryLinkNamespace = 'iqot'; const fragmentNamespace = 'iqot'; const layoutMode = 'view';/* Tagueamento */

/* Pega seção */

let section = "";
const possibleSections = document.querySelectorAll(
  `h2, h3, .h2, .h3, #fragment-${fragmentNamespace}`
);

if (possibleSections.length === 1) {
  /* Se não houver nenhum h2 pega o h1 da página */
  section = document.querySelector("h1").innerText;
} else {
  /* Pega o h2 mais próximo do fragmento */
  possibleSections.forEach((possibleSection) => {
    if (possibleSection.localName !== "a" && possibleSection.innerText) {
      section = possibleSection;
    } else {
      return section;
    }
  });
}

