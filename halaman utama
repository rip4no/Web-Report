 <script>(function() {const configuration = {}; const fragmentElement = document.querySelector('#fragment-719ca05f-2783-460b-3545-7665879869b3'); const fragmentEntryLinkNamespace = 'ajce'; const fragmentNamespace = 'ajce'; const layoutMode = 'view';$(function () {
  const fragmentElement = document;

  // Verifica se o elemento foi encontrado antes de acessá-lo
  const CIRCLE_ELEMENT = fragmentElement.querySelector("svg .seta-bar");
  if (CIRCLE_ELEMENT) {
    const CIRCLE_RADIUS = CIRCLE_ELEMENT.getAttribute("r");
    const CIRCUMFERENCE = Math.PI * 2 * CIRCLE_RADIUS;

    const PROGRESS_ARROW_CONTAINER = fragmentElement.querySelector(
      ".progress-arrow-container"
    );
    const TURNING_POINT = 50;
    let previousRoundedProgress = 0;
    let previousProgress = 0;
    let isArrowRotated = false;

    PROGRESS_ARROW_CONTAINER.addEventListener("click", function (event) {
      event.preventDefault();
      const SCROLLING_ELEMENT = document.scrollingElement || document.querySelector("html");
      SCROLLING_ELEMENT.scroll({
        top: previousRoundedProgress >= TURNING_POINT ? 0 : SCROLLING_ELEMENT.scrollHeight,
        behavior: 'smooth'
      });
    });

    renderProgress();

    function renderProgress() {
      const SCROLLING_ELEMENT = document.scrollingElement || document.querySelector("html");
      const scrollMax = SCROLLING_ELEMENT.scrollHeight;
      const winHeight = window.innerHeight;
      const scrollValue = window.scrollY;
      const progress = (scrollValue / (scrollMax - winHeight)) * 100;
      const roundedProgress = Math.round(progress);

      if (previousRoundedProgress !== roundedProgress || (progress > 99 && previousProgress !== progress)) {
        previousRoundedProgress = roundedProgress;
        previousProgress = progress;

        renderArrowProgress(roundedProgress);
        renderCircleProgress(progress);
      }

      requestAnimationFrame(renderProgress);
    }

    function renderArrowProgress(roundedProgress) {
      if (roundedProgress >= TURNING_POINT && !isArrowRotated) {
        PROGRESS_ARROW_CONTAINER.classList.add("rotate");
        isArrowRotated = true;
        var spanElement = document.getElementById('textoBotao');
        if (spanElement.textContent === 'Ir para o rodapé ALT + T') {
          spanElement.textContent = 'Ir para o topo ALT + T';
        }
        var footerVale = document.getElementById('footerVale');
        if (footerVale) {
          // footerVale.setAttribute('tabindex', '-1');
          footerVale.focus();
        } else {
          console.error("Elemento 'footerVale' não encontrado.");
        }
      } else if (roundedProgress <= TURNING_POINT - 1 && isArrowRotated) {
        PROGRESS_ARROW_CONTAINER.classList.remove("rotate");
        isArrowRotated = false;
        var spanElement = document.getElementById('textoBotao');
        if (spanElement.textContent === 'Ir para o topo ALT + T') {
          spanElement.textContent = 'Ir para o rodapé ALT + T';
        }
        var headerVale = document.getElementsByClassName('vale-fragmento-header')[0];
        if (headerVale) {
          headerVale.setAttribute('tabindex', '-1');
          headerVale.focus();
        } else {
          console.error("Elemento 'vale-fragmento-header' não encontrado.");
        }
      }
    }

    function renderCircleProgress(progress) {
      const offsetTotal = CIRCUMFERENCE - (progress / 100) * CIRCUMFERENCE;

      CIRCLE_ELEMENT.setAttribute("stroke-dashoffset", offsetTotal);
    }
  } else {
    console.error("Elemento 'svg .seta-bar' não encontrado.");
  }
});

// Tagueamento

const handleEventBtnClick = (text) => {
  Analytics.track("Botão", {
    section: "Seta de progresso",
    rotulo: text,
  });
};

const arrowBtn = document.querySelector(".progress-arrow-container");
arrowBtn.addEventListener("click", () =>
  handleEventBtnClick("Seta de progresso")
);;}());</script>
</div>
