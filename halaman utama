 <script>(function() {const configuration = {}; const fragmentElement = document.querySelector('#fragment-9a7ce0c3-046d-4852-67af-c4ac9b92b9a3'); const fragmentEntryLinkNamespace = 'lrgw'; const fragmentNamespace = 'lrgw'; const layoutMode = 'view';const burguers = fragmentElement.querySelectorAll(".burguer");
const searchIcons = fragmentElement.querySelectorAll(".search-icon");

burguers.forEach(function (menu) {
  menu.addEventListener("click", function () {
    Liferay.fire("openSideMenu");
  });

  // Navegação por tab (acessibilidade)
  // fecha ou abre menu lateral quando o ícone de burguer está em foco
  menu.addEventListener("focus", function (event) {
    const menuLateral = document.querySelector(".vale-fragmento-menu-lateral");
    if (!menuLateral) return;

    const closeMenuLateralBtn = menuLateral.querySelector(
      ".content-close-button"
    );
    if (!closeMenuLateralBtn) return;

    if (menuLateral.classList.contains("is-open")) closeMenuLateralBtn.click();
    else {
      event.currentTarget.click();
      // Usa setTimeout para esperar o menu abrir
      setTimeout(
        () => document.querySelector(".content-close-button").focus(),
        500
      );
    }
  });
});

searchIcons.forEach(function (searchIcon) {
  searchIcon.addEventListener("click", function () {
    Liferay.fire("openHeaderSearch");
  });

  searchIcon.addEventListener("keydown", function (event) {
    if (event.keyCode === 13) event.currentTarget.click();
  });
});

// Accessibility

function getLocalStorageItem(key) {
  return JSON.parse(localStorage.getItem(key));
}

function setLocalStorageItem(key, value) {
  localStorage.setItem(key, JSON.stringify(value));
}

function updateFontSize(fontSize) {
  html.style.fontSize = `${fontSize}px`;
  setLocalStorageItem(fontSizeKey, fontSize);
}

const fontSizeKey = "fontSize";
const contrastKey = "contrast";

const increaseFont = fragmentElement.querySelector("#increase-font");
const decreaseFont = fragmentElement.querySelector("#decrease-font");
const contrast = fragmentElement.querySelector("#contrast");
const html = document.querySelector("html");
const body = document.querySelector("body");

const defaultFontSize = 16;
let fontSize = getLocalStorageItem(fontSizeKey) || defaultFontSize;
updateFontSize(fontSize);

increaseFont.addEventListener("click", function () {
  if (fontSize < 24) {
    fontSize += 2;
    updateFontSize(fontSize);
  }
});

decreaseFont.addEventListener("click", function () {
  if (fontSize > 12) {
    fontSize -= 2;
    updateFontSize(fontSize);
  }
});

const initialContrast = getLocalStorageItem(contrastKey);
if (initialContrast) {
  body.classList.add("contrast");
} else {
  body.classList.remove("contrast");
}

contrast.addEventListener("click", function () {
  body.classList.toggle("contrast");
  const contrast = body.classList.contains("contrast");
  setLocalStorageItem(contrastKey, contrast);
});

// Tagueamento

const handleEventBtnClick = (text, href) => {
  Analytics.track("Botão", {
    section: "Header",
    rotulo: `${text} : ${href}`,
  });
};

const handleEventBtnClickWithoutLink = (text) => {
  Analytics.track("Botão", {
    section: "Header",
    rotulo: text,
  });
};

const logoBtn = fragmentElement.querySelector(".logo a");
logoBtn.addEventListener("click", () =>
  handleEventBtnClick("Logo go Home", logoBtn.href)
);

const leftBurguer = fragmentElement.querySelector(".left-menu .burguer");
leftBurguer.addEventListener("click", () =>
  handleEventBtnClickWithoutLink("Open Menu")
);

const rightBurguer = fragmentElement.querySelector(".right-menu .burguer");
rightBurguer.addEventListener("click", () =>
  handleEventBtnClickWithoutLink("Open Menu mobile")
);

const searchIcon = fragmentElement.querySelector(".search-icon");
searchIcon.addEventListener("click", () =>
  handleEventBtnClickWithoutLink("Open Busca header")
);;}());</script>
</div>
